<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh 
	<excludes>
		<pattern>/api*</pattern>
	</excludes>
	<excludes>
		<pattern>/bill*</pattern>
	</excludes>-->
	<decorator name="form" page="web/log-form.jsp">
		<pattern>/form*</pattern>
	</decorator>
	<decorator name="student" page="student/web.jsp">
		<pattern>/student*</pattern>
	</decorator>
        
        <decorator name="passwordvalidation" page="student/form-submit-password.jsp">
                <pattern>/student-submit-password*</pattern>
	</decorator>
        
        <decorator name="teacher" page="teacher/web.jsp">
		<pattern>/teacher*</pattern>
	</decorator>
        
        <decorator name="web" page="web/web.jsp">
		<pattern>/*</pattern>
	</decorator>
        
        <decorator name="result" page="web/web.jsp">
		<pattern>/result*</pattern>
	</decorator>

</decorators>
